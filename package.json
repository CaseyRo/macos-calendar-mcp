{
  "name": "macos-calendar-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for macOS Calendar integration using AppleScript",
  "main": "macos-calendar-mcp-sdk.js",
  "type": "module",
  "bin": {
    "macos-calendar-mcp": "./macos-calendar-mcp-sdk.js"
  },
  "scripts": {
    "start": "node macos-calendar-mcp-sdk.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --localstorage-file=/tmp/jest-localstorage' node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --localstorage-file=/tmp/jest-localstorage' node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --watch"
  },
  "keywords": [
    "mcp",
    "calendar",
    "macos",
    "applescript",
    "claude",
    "ai"
  ],
  "author": "xybstone",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xybstone/macos-calendar-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/xybstone/macos-calendar-mcp/issues"
  },
  "homepage": "https://github.com/xybstone/macos-calendar-mcp#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin"
  ],
  "dependencies": {
    "@dotenvx/dotenvx": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "express": "^5.1.0",
    "i18next": "^25.6.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "jest": "^30.2.0"
  }
}
